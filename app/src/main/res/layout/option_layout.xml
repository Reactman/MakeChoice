<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.example.visionet.makechoice.activity.OptionAddActivity"
        android:divider="@drawable/divider">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkturquoise"
            android:orientation="horizontal"
    >
        <ImageView
                android:id="@+id/newOption_back"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/iccon_arrow_back_default_24dp"
                android:onClick="onClick"
        />
        <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/option_add"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
        />

    </LinearLayout>

    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap"
    />
    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap"
    />
    <EditText
            android:drawableStart="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap"
    />

</LinearLayout>